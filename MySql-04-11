
CREATE DATABASE biblioteca;
USE biblioteca;

CREATE TABLE Autores (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100) NOT NULL,
    nacionalidade VARCHAR(50)
);


CREATE TABLE Categorias (
    id INT PRIMARY KEY AUTO_INCREMENT,
    descricao VARCHAR(50) NOT NULL
);

CREATE TABLE Livros (
    id INT PRIMARY KEY AUTO_INCREMENT,
    titulo VARCHAR(100) NOT NULL,
    ano_publicacao YEAR,
    id_autor INT,
    id_categoria INT,
    FOREIGN KEY (id_autor) REFERENCES Autores(id),
    FOREIGN KEY (id_categoria) REFERENCES Categorias(id)
);

--modificar a tabela Livros para adicionar uma coluna preco
ALTER TABLE Livros
ADD COLUMN preco DECIMAL(5,2);

--acrescentar um novo campo quantidade para a tabela Categorias
ALTER TABLE Categorias
ADD COLUMN quantidade INT DEFAULT 0;

--inserir registros na tabela Autores
INSERT INTO Autores (nome, nacionalidade) VALUES
('J.K. Rowling', 'Britânica'),
('George Orwell', 'Britânica'),
('Agatha Christie', 'Britânica');

--inserir registros na tabela Categorias
INSERT INTO Categorias (descricao, quantidade) VALUES
('Ficção', 10),
('Não-ficção', 5),
('Fantasia', 8);

--inserir registros na tabela Livros
INSERT INTO Livros (titulo, ano_publicacao, id_autor, id_categoria, preco) VALUES
('Harry Potter e a Pedra Filosofal', 1997, 1, 3, 39.90),
('1984', 1949, 2, 2, 29.90),
('Assassinato no Expresso do Oriente', 1934, 3, 1, 19.90);

--inserir um novo autor
INSERT INTO Autores (nome, nacionalidade) VALUES ('Gabriel Garcia Marquez', 'Colombiano');

--livro associado a Gabriel Garcia Marquez
INSERT INTO Livros (titulo, ano_publicacao, id_autor, id_categoria, preco) VALUES
('Cem Anos de Solidão', 1967, LAST_INSERT_ID(), 1, 29.90);

--atualização da categoria
UPDATE Categorias
SET descricao = 'Romance'
WHERE id = 1;

--aumentar preço dos livros -2000
UPDATE Livros
SET preco = preco * 1.10
WHERE ano_publicacao < 2000;

--corrigir nome do autor
UPDATE Autores
SET nome = 'Gabriel García Márquez'
WHERE nome = 'Gabriel Garcia Marquez';

--excluir livros anteriores a 1950
DELETE FROM Livros
WHERE ano_publicacao < 1950;

--remover categorias com menos de 5 livros
DELETE FROM Categorias
WHERE quantidade < 5;

--remover coluna quantidade da tabela Categorias
ALTER TABLE Categorias
DROP COLUMN quantidade;
